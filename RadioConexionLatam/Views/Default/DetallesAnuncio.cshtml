@model RadioConexionLatam.Models.Anuncios


@{
    ViewBag.Title = "Inicio";
}

@section scripts {
    <script>

    </script>
}


<div class="container">
    <h2>@Model.titulo</h2>
    <div class="media">
        <img src="@Url.Content(Model.ImagenRuta)" class="mr-3 img-fluid" alt="Imagen de @Model.titulo">
        <div class="media-body">
            <h5 class="mt-0">@Model.subtitulo</h5>
            <p>@Model.contenido</p>
            <p>Publicado el: @Model.fechaPublicacion.ToString("dd/MM/yyyy")</p>
            <a href="@Url.Action("Index", "Default")" class="btn btn-primary">Volver a la lista</a>
        </div>
    </div>
</div>


<!-- Sección de Feeds con Diseño Friki -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-dark text-light">
                <div class="card-header bg-primary">
                    <i class="fab fa-facebook-f"></i> Facebook
                </div>
                <div class="card-body">
                    <img src="~/Content/images/diseño1.png" alt="Feed de Facebook" class="img-fluid">
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-light">
                <div class="card-header bg-info">
                    <i class="fab fa-twitter"></i> Twitter
                </div>
                <div class="card-body">
                    <p>No hay nada que ver aquí. Por ahora.</p>
                    <a href="https://twitter.com/AnimeNexus" class="btn btn-info">Ver en Twitter</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-light">
                <div class="card-header bg-danger">
                    Las últimas 15 rolas
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-dark text-light">Canción 1</li>
                    <li class="list-group-item bg-dark text-light">Canción 2</li>
                    <li class="list-group-item bg-dark text-light">Canción 3</li>
                </ul>
            </div>
        </div>
    </div>
</div>