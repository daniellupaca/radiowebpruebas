@model IEnumerable<RadioConexionLatam.Models.Eventos>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Styles {
    <style>
        .eventos-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .evento-publicitario {
            flex: 1 1 calc(33.333% - 20px);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
            box-sizing: border-box;
            max-width: 400px;
        }

            .evento-publicitario .imagen {
                width: 100%;
                text-align: center;
                padding: 10px;
            }

                .evento-publicitario .imagen img {
                    width: 100%;
                    height: 200px;
                    object-fit: cover;
                    border-radius: 10px;
                }

            .evento-publicitario .info {
                margin-top: 20px;
                text-align: center;
            }

                .evento-publicitario .info h2 {
                    font-size: 2em;
                    margin-bottom: 10px;
                }

                .evento-publicitario .info p {
                    font-size: 1.2em;
                    margin: 5px 0;
                }

            .evento-publicitario .entradas {
                margin-top: 20px;
                text-align: left;
                width: 100%;
            }

                .evento-publicitario .entradas h3 {
                    margin-bottom: 10px;
                }

                .evento-publicitario .entradas ul {
                    list-style: none;
                    padding: 0;
                }

                    .evento-publicitario .entradas ul li {
                        margin-bottom: 10px;
                        font-size: 1.1em;
                    }

            .evento-publicitario .comprar {
                margin-top: 20px;
                text-align: center;
                width: 100%;
            }

                .evento-publicitario .comprar button {
                    padding: 10px 20px;
                    font-size: 1.2em;
                    background-color: #d9534f;
                    color: white;
                    border: none;
                    cursor: pointer;
                    width: 100%;
                }

            .evento-publicitario .extra-info {
                margin-top: 20px;
                text-align: center;
                font-size: 0.9em;
                color: #888;
            }

        .eventos-container .evento-publicitario:nth-child(3n+1) {
            clear: both;
        }
    </style>
}

<div class="eventos-container">
    @foreach (var evento in Model.Where(e => e.estado == "A"))
    {
        <div class="evento-publicitario">
            @if (evento.Imagen != null)
            {
                <div class="imagen">
                    <img src="data:image;base64,@Convert.ToBase64String(evento.Imagen)" alt="Imagen del evento" />
                </div>
            }
            <div class="info">
                <h2>@evento.nombreEvento</h2>
                <p>@evento.descripcion</p>
                <p><strong>Fecha:</strong> @evento.fechaEvento.ToString("dddd, dd MMMM yyyy")</p>
                <p><strong>Hora:</strong> @evento.fechaEvento.ToString("hh:mm tt")</p>
                <p><strong>Lugar:</strong> @evento.lugar</p>
                <p><strong>Organizador:</strong> @evento.organizador</p>
            </div>
            <div class="entradas">
                <h3>Entradas</h3>
                <ul>
                    <li><strong>Preferencial:</strong> S/ 136.00</li>
                </ul>
            </div>
            <div class="comprar">
                <button>Comprar ahora</button>
            </div>
            <div class="extra-info">
                <p>* Te informamos que tus datos personales serán compartidos con el organizador del evento.</p>
                <p>* Apto para menores de 18 años en compañía de un adulto.</p>
            </div>
        </div>
    }
</div>
