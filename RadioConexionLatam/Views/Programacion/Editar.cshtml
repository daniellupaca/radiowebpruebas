@model RadioConexionLatam.Models.ProgramacionSemanal
@{
    Layout = null;
    string userRoleText = ViewBag.UserRole == "1" ? "Administrador" : ViewBag.UserRole == "2" ? "Empleado" : "Desconocido";

}

<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default" data-assets-path="../Content/Usuario/" data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Editar Programación Semanal</title>
    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../Content/Usuario/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700&display=swap" rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/Content/Usuario/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/Content/Usuario/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Content/Usuario/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/Content/Usuario/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/Content/Usuario/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Content/Usuario/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/Content/Usuario/vendor/js/helpers.js"></script>
    <script src="~/Content/Usuario/js/config.js"></script>
</head>
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="~/Default/Index" class="app-brand-link" target="_blank">
                        <span class="app-brand-logo demo">
                            <img src="~/Content/Usuario/img/logo_1.png" style="width: 60px" />
                        </span>
                        <span class="app-brand-text demo menu-text fw-bolder ms-2">RadioLatam</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item active">
                        <a href="~/Login/PanelAdmin" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">Dashboard</div>
                        </a>
                    </li>

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">MODULOS</span>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-dock-top"></i>
                            <div data-i18n="Account Settings">Anuncios</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="~/Anuncio/CrearAnuncio" class="menu-link">
                                    <div data-i18n="Account">Crear Anuncio</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="~/Anuncio/VisualizarAnuncio" class="menu-link">
                                    <div data-i18n="Notifications">Listar Anuncios</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="~/Anuncio/ListarCategorias" class="menu-link">
                                    <div data-i18n="Notifications">Categorias</div>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            <div data-i18n="Authentications">Eventos</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="~/Eventos/CrearEvento" class="menu-link">
                                    <div data-i18n="Basic">Crear Evento</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="~/Eventos/Index" class="menu-link">
                                    <div data-i18n="Basic">Listar Eventos</div>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-cube-alt"></i>
                            <div data-i18n="Misc">Usuarios</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="~/Usuario/CrearUsuario" class="menu-link">
                                    <div data-i18n="Error">Crear Usuarios</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="~/Usuario/VisualizarUsuario" class="menu-link">
                                    <div data-i18n="Under Maintenance">Listar Usuarios</div>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-cube-alt"></i>
                            <div data-i18n="Misc">Programacion Semanal</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="~/Programacion/Crear" class="menu-link">
                                    <div data-i18n="Error">Crear Programacion</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="~/Programacion/VisualizarProgramacion" class="menu-link">
                                    <div data-i18n="Under Maintenance">Listar Programacion</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </aside>
            <div class="layout-page">
                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme" id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>
                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <div class="navbar-nav align-items-center">
                            <div class="nav-item d-flex align-items-center">
                                <i class="bx bx-search fs-4 lh-0"></i>
                                <input type="text" class="form-control border-0 shadow-none" placeholder="Search..." aria-label="Search..." />
                            </div>
                        </div>
                        <ul class="navbar-nav flex-row align-items-center ms-auto">

                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="../Content/Usuario/img/avatars/usuario.png" class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">@ViewBag.UserName @ViewBag.UserLastName</span>
                                                    <small class="text-muted">@userRoleText</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Login")">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Cerrar Sesión</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="card">
                            <div class="table-responsive text-nowrap">
                                <div class="container mt-5">
                                    <div class="card-header">
                                        <h4 class="card-title">Editar Programación Semanal</h4>
                                    </div>
                                    <div class="card-body">
                                        @using (Html.BeginForm("Editar", "Programacion", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.HiddenFor(model => model.Id)

                                            <div class="mb-3">
                                                @Html.LabelFor(model => model.Dia, new { @class = "form-label" })
                                                @Html.DropDownListFor(model => model.Dia, new SelectList(new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" }), "Seleccione un día", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Dia, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="mb-3">
                                                @Html.LabelFor(model => model.Hora, new { @class = "form-label" })
                                                @Html.EditorFor(model => model.Hora, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "24" } })
                                                @Html.ValidationMessageFor(model => model.Hora, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="mb-3">
                                                @Html.LabelFor(model => model.NombrePrograma, new { @class = "form-label" })
                                                @Html.EditorFor(model => model.NombrePrograma, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.NombrePrograma, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="mb-3">
                                                @Html.LabelFor(model => model.idUsuario, "Usuario", new { @class = "form-label" })
                                                @Html.DropDownListFor(model => model.idUsuario, (SelectList)ViewBag.Usuarios, "Seleccione un usuario", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="mb-3">
                                                @Html.LabelFor(model => model.idCategoria, "Categoria", new { @class = "form-label" })
                                                @Html.DropDownListFor(model => model.idCategoria, (SelectList)ViewBag.Categorias, "Seleccione una categoría", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-backdrop fade"></div>
            </div>
        </div>
    </div>

    <div class="layout-overlay layout-menu-toggle"></div>

    <script src="~/Content/Usuario/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Content/Usuario/vendor/libs/popper/popper.js"></script>
    <script src="~/Content/Usuario/vendor/js/bootstrap.js"></script>
    <script src="~/Content/Usuario/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Content/Usuario/vendor/js/menu.js"></script>
    <script src="~/Content/Usuario/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="~/Content/Usuario/js/main.js"></script>
    <script src="~/Content/Usuario/js/dashboards-analytics.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
